<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="TaskPaneApp">

  <!-- ============================================ -->
  <!-- VERZIJA: 1.0.0.49 (V49) - TASK PANE ONLY -->
  <!-- Datum: 2025-02-10 -->
  <!-- ============================================ -->

  <Id>54bfb8d7-61fe-4a63-898d-0e7f6e51e51b</Id>
  <Version>1.0.0.49</Version>
  <ProviderName>BiroA</ProviderName>
  <DefaultLocale>sr-RS</DefaultLocale>

  <DisplayName DefaultValue="BiroA Word dodatak"/>
  <Description DefaultValue="Pametna polja za Word dokumente"/>

  <IconUrl DefaultValue="https://baneandreev-byte.github.io/ba-word-addin/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://baneandreev-byte.github.io/ba-word-addin/assets/icon-80.png"/>
  <SupportUrl DefaultValue="https://baneandreev-byte.github.io/ba-word-addin"/>

  <AppDomains>
    <AppDomain>https://baneandreev-byte.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://baneandreev-byte.github.io/ba-word-addin/taskpane.html?v=20250210_V49"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
    xsi:type="VersionOverridesV1_0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.1">
        <bt:Set Name="WordApi"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>

          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="BiroA.Group">
                <Label resid="BiroA.Group.Label"/>

                <!-- OBAVEZNO: Group Icon mora da postoji pre Control -->
                <Icon>
                  <bt:Image size="16" resid="Icon.16"/>
                  <bt:Image size="32" resid="Icon.32"/>
                  <bt:Image size="80" resid="Icon.80"/>
                </Icon>

                <!-- Task Pane Button -->
                <Control xsi:type="Button" id="BiroA.Button">
                  <Label resid="BiroA.Button.Label"/>
                  <Supertip>
                    <Title resid="BiroA.Button.Label"/>
                    <Description resid="BiroA.Button.Desc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://baneandreev-byte.github.io/ba-word-addin/assets/icon-16.png"/>
        <bt:Image id="Icon.32" DefaultValue="https://baneandreev-byte.github.io/ba-word-addin/assets/icon-32.png"/>
        <bt:Image id="Icon.80" DefaultValue="https://baneandreev-byte.github.io/ba-word-addin/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://baneandreev-byte.github.io/ba-word-addin/taskpane.html?v=20250210_V49"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="BiroA.Group.Label" DefaultValue="BiroA"/>
        <bt:String id="BiroA.Button.Label" DefaultValue="BiroA Polja"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="BiroA.Button.Desc" DefaultValue="Upravljanje aktivnim poljima"/>
      </bt:LongStrings>
    </Resources>


    <!-- ============================================ -->
    <!-- GRAPH API SSO (V47 - SharePoint Templates) -->
    <!-- ============================================ -->
    <WebApplicationInfo>
      <Id>54bfb8d7-61fe-4a63-898d-0e7f6e51e51b</Id>
      <Resource>api://baneandreev-byte.github.io/54bfb8d7-61fe-4a63-898d-0e7f6e51e51b</Resource>
      <Scopes>
        <Scope>openid</Scope>
        <Scope>profile</Scope>
        <Scope>Files.Read</Scope>
        <Scope>Sites.Read.All</Scope>
        <Scope>offline_access</Scope>
        <Scope>User.Read</Scope>
      </Scopes>
    </WebApplicationInfo>
  </VersionOverrides>

</OfficeApp>
